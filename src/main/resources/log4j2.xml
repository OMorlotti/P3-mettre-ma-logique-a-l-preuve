<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
    <Appenders>
        <File name="A1" fileName="log/escapeGame.log" append="false">
            <PatternLayout pattern="%level - %m%n" />
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%level - %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="Config" level="info">
            <AppenderRef ref="A1" />
        </Logger>
        <Logger name="EscapeGame" level="info">
            <AppenderRef ref="A1" />
        </Logger>
        <Logger name="ModeDefender" level="info">
            <AppenderRef ref="A1" />
        </Logger>
        <Logger name="ModeChallenger" level="info">
            <AppenderRef ref="A1" />
        </Logger>
        <Logger name="ModeDual" level="info">
            <AppenderRef ref="A1" />
        </Logger>
        <Root level="info">
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>
</Configuration>